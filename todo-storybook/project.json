{
  "name": "todo-storybook",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "todo-storybook/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "todo-storybook/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "todo-storybook/.storybook",
        "browserTarget": "todo-storybook:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/todo-storybook",
        "configDir": "todo-storybook/.storybook",
        "browserTarget": "todo-storybook:build-storybook",
        "compodoc": false,
        "styles": [
          "apps/todo/src/styles.scss"
        ]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c todo-storybook/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "todo-storybook:build-storybook",
        "staticFilePath": "dist/storybook/todo-storybook",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "todo-storybook:build-storybook:ci"
        }
      }
    }
  }
}
